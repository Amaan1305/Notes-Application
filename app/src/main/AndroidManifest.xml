<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lizzy.notes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/notes"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/notes"
        android:supportsRtl="true"
        android:theme="@style/Theme.Notes">
        <activity
            android:name=".NoteDetailActivity"
            android:exported="false" />
        <activity
            android:name=".EditNoteActivity"
            android:exported="false" />
        <activity
            android:name=".CreateNotesActivity"
            android:exported="false" />
        <activity
            android:name=".NotesMainActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity.SignUpMainActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity.LoginMainActivity"
            android:exported="false" />
        <activity
            android:name=".SplashScreen.SplashScreen"
            android:exported="true"
            tools:ignore="MissingClass">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>